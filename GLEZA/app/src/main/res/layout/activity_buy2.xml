    <View
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="370dp"
        android:layout_height="351dp"
        android:layout_gravity="center"
